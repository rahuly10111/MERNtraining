// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  mobile   String
}

model supplier {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  invoices invoice[]
}

model header {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  header_data Json
  update_date String
}

model invoice {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  col_1       Int
  col_2       Int
  col_3       Int
  col_4       Int
  col_5       Int
  col_6       Int
  col_7       Int
  col_8       Int
  col_9       Int
  col_10      Int
  update_date String
  ischeck     Boolean
  supplierId  String   @db.ObjectId
  supplier    supplier @relation(fields: [supplierId], references: [id])
}
