// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  mobile   String
}

model supplier {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  supplier        String
  hair_services   Float
  beauty_services Float
  custom_1        Float
  custom_2        Float
  custom_3        Float
  custom_4        Float
  Net             Float
  VAT             Float
  Gross           Float
  Advance_paid    Float
  balance_due     Float
}
